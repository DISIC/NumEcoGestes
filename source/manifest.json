{
  "manifest_version": 3,
  "name": "NumÉcoGestes",
  "description": "",
  "version": "1.4",
  "permissions": [
    "background",
    "storage",
    "notifications",
    "alarms",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_page": "script-src 'self' ; object-src 'self'"
  },
  "action": {
    "default_title": "Cliquer pour afficher les écogestes",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/banner.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}